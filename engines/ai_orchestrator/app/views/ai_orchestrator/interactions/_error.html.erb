<div id="ai_interaction_<%= interaction.id %>" class="ai-result" data-status="failed">
  <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
    <div class="flex items-center gap-2 mb-2">
      <span class="inline-block w-2 h-2 bg-red-500 rounded-full"></span>
      <span class="text-sm font-medium text-red-800"><%= t("ai_orchestrator.failed") %></span>
    </div>
    <p class="text-sm text-red-700"><%= error_message %></p>
    <p class="text-xs text-gray-500 mt-1"><%= t("ai_orchestrator.try_again") %></p>
  </div>
</div>
