<div id="like_button_<%= likeable.class.name.parameterize %>_<%= likeable.id %>"
     data-controller="like"
     data-like-url-value="<%= community_engine.toggle_like_path %>"
     data-like-likeable-type-value="<%= likeable.class.name %>"
     data-like-likeable-id-value="<%= likeable.id %>"
     data-like-liked-value="<%= liked %>"
     style="display:inline-flex; align-items:center; gap:0.25rem;">
  <button data-action="click->like#toggle"
          data-like-target="button"
          style="display:inline-flex; align-items:center; gap:0.3rem; padding:0.3rem 0.6rem; border-radius:11px;
                 border:none; background:transparent; cursor:pointer; transition:all 0.15s;
                 font-family:'DM Sans',sans-serif; font-size:0.82rem; font-weight:500;
                 color:<%= liked ? '#ef4444' : 'var(--color-sub, #6D665B)' %>;">
    <span data-like-target="icon">
      <% if liked %>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
      <% else %>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
      <% end %>
    </span>
    <span data-like-target="count" style="font-family:'DM Mono',monospace; font-size:0.65rem; color:var(--color-muted, #887F72);"><%= likes_count %></span>
  </button>
</div>
