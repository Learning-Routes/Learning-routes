<div id="like_button_<%= likeable.class.name.parameterize %>_<%= likeable.id %>"
     data-controller="like"
     data-like-url-value="<%= community_engine.toggle_like_path %>"
     data-like-likeable-type-value="<%= likeable.class.name %>"
     data-like-likeable-id-value="<%= likeable.id %>"
     data-like-liked-value="<%= liked %>"
     class="inline-flex items-center gap-1.5">
  <button data-action="click->like#toggle"
          data-like-target="button"
          class="inline-flex items-center gap-1 px-2.5 py-1.5 rounded-[11px] text-sm font-medium transition-colors duration-150 hover:bg-[#E8E4DC] <%= liked ? 'liked' : 'text-[#1C1812]' %>"
          style="font-family: 'DM Sans', sans-serif;">
    <span data-like-target="icon">
      <% if liked %>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-red-500"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
      <% else %>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
      <% end %>
    </span>
    <span data-like-target="count" class="text-xs text-[#6B6560]"><%= likes_count %></span>
  </button>
</div>
