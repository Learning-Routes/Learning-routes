<%# Inline floating thought — compact comment preview for shared routes.
     Locals: shared_route %>
<%
  best = shared_route.best_comment
%>
<% if best %>
  <div style="display:inline-flex; align-items:center; gap:0.4rem; margin-top:0.35rem; padding:0.25rem 0.5rem;
              background:var(--color-tint, rgba(28,24,18,0.03)); border-radius:8px; max-width:100%;">
    <div style="flex-shrink:0; width:18px; height:18px; border-radius:50%;
                background:var(--color-accent, #2C261E); color:var(--color-accent-text, #F5F1EB);
                display:flex; align-items:center; justify-content:center;
                font-family:'DM Sans',sans-serif; font-size:0.42rem; font-weight:700;">
      <%= best.user&.name.to_s.first&.upcase || "?" %>
    </div>
    <p style="font-family:'DM Sans',sans-serif; font-size:0.68rem; color:var(--color-muted, #887F72);
             line-height:1.3; margin:0; font-style:italic;
             overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
      "<%= best.body.truncate(55) %>"
      <span style="font-family:'DM Mono',monospace; font-size:0.52rem; font-style:normal;">— <%= best.user&.name || "?" %></span>
    </p>
  </div>
<% end %>
