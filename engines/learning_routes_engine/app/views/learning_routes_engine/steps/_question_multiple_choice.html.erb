<div class="space-y-3">
  <% Array(question.options).each_with_index do |option, opt_idx| %>
    <label class="flex items-center gap-3 p-3 rounded-lg bg-gray-800/50 border border-white/[0.04] hover:border-indigo-500/30 cursor-pointer transition">
      <input type="radio" name="answers[<%= question.id %>]" value="<%= option %>"
             class="w-4 h-4 text-indigo-500 bg-gray-700 border-gray-600 focus:ring-indigo-500"
             data-action="change->question-nav#markAnswered" data-index="<%= index %>">
      <span class="text-sm text-gray-300"><%= option %></span>
    </label>
  <% end %>
</div>
