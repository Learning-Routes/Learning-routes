<%= turbo_stream.replace dom_id(@step, :review) do %>
  <div id="<%= dom_id(@step, :review) %>" class="bg-gray-900 border border-green-700/30 rounded-xl p-4">
    <div class="flex items-center gap-3">
      <svg aria-hidden="true" class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="text-sm font-medium text-green-300"><%= t("learning_engine.review.recorded") %></p>
        <p class="text-xs text-gray-500"><%= t("learning_engine.review.next_review") %> <%= @step.fsrs_next_review_at ? l(@step.fsrs_next_review_at, format: "%b %d, %Y") : t("step_complete.review_tbd") %></p>
      </div>
    </div>
  </div>
<% end %>
