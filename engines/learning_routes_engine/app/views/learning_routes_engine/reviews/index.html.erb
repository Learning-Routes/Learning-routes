<% content_for(:title, t('learning_engine.reviews.title')) %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-white"><%= t('learning_engine.reviews.heading') %></h1>
    <%= link_to main_app.dashboard_path, class: "text-sm text-gray-400 hover:text-white transition" do %>
      <%= t('learning_engine.reviews.back') %>
    <% end %>
  </div>

  <% if @due_reviews.any? %>
    <div class="space-y-3">
      <% @due_reviews.each do |review| %>
        <div class="bg-gray-900 border border-white/[0.06] rounded-xl p-4">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-sm font-semibold text-white"><%= review[:step].title %></h3>
              <p class="text-xs text-gray-500 mt-0.5"><%= review[:route].topic %></p>
            </div>
            <%= link_to t('learning_engine.reviews.review_btn'),
                route_step_path(review[:route], review[:step]),
                class: "rounded-lg px-3 py-1.5 text-xs font-semibold text-white bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-400 hover:to-purple-400 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <svg aria-hidden="true" class="w-12 h-12 text-gray-700 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-gray-400"><%= t('learning_engine.reviews.empty') %></p>
    </div>
  <% end %>
</div>
