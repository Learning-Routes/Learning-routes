<% content_for(:title, "Reset Password - Learning Routes") %>

<div class="mx-auto w-full max-w-md">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Set new password</h1>
    <p class="mt-2 text-gray-600">Enter your new password below</p>
  </div>

  <div class="bg-white shadow-lg rounded-2xl p-8">
    <%= form_with(model: @user, url: core.reset_password_path(token: params[:token]), method: :patch) do |f| %>
      <%= render "core/shared/form_errors", object: @user %>

      <div class="space-y-5">
        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">New password</label>
          <%= f.password_field :password,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "Minimum 8 characters",
              required: true,
              minlength: 8,
              autofocus: true,
              autocomplete: "new-password" %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">Confirm new password</label>
          <%= f.password_field :password_confirmation,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "Repeat your new password",
              required: true,
              autocomplete: "new-password" %>
        </div>

        <%= f.submit "Update password",
            class: "w-full rounded-lg bg-indigo-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
