<% content_for(:title, "Sign Up - Learning Routes") %>

<div class="mx-auto w-full max-w-md">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create your account</h1>
    <p class="mt-2 text-gray-600">Start your personalized learning journey</p>
  </div>

  <div class="bg-white shadow-lg rounded-2xl p-8">
    <%= form_with(model: @user, url: core.sign_up_path, data: { controller: "form-validation" }) do |f| %>
      <%= render "core/shared/form_errors", object: @user %>

      <div class="space-y-5">
        <div>
          <label for="user_name" class="block text-sm font-medium text-gray-700 mb-1">Full name</label>
          <%= f.text_field :name,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "Your full name",
              required: true,
              autofocus: true,
              data: { form_validation_target: "field", action: "blur->form-validation#validate" } %>
        </div>

        <div>
          <label for="user_email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <%= f.email_field :email,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "you@example.com",
              required: true,
              autocomplete: "email",
              data: { form_validation_target: "field", action: "blur->form-validation#validate" } %>
        </div>

        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <%= f.password_field :password,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "Minimum 8 characters",
              required: true,
              minlength: 8,
              autocomplete: "new-password",
              data: { form_validation_target: "field", action: "blur->form-validation#validate" } %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">Confirm password</label>
          <%= f.password_field :password_confirmation,
              class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition",
              placeholder: "Repeat your password",
              required: true,
              autocomplete: "new-password",
              data: { form_validation_target: "field", action: "blur->form-validation#validate" } %>
        </div>

        <%= f.submit "Create account",
            class: "w-full rounded-lg bg-indigo-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-500">
      Already have an account?
      <%= link_to "Sign in", core.sign_in_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
