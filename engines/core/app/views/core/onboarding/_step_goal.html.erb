<%= turbo_frame_tag "onboarding_step" do %>
  <div>
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-gray-900">What's your goal?</h2>
      <p class="mt-2 text-gray-600">Tell us what you want to achieve</p>
    </div>

    <%= form_with(url: core.onboarding_update_step_path(step: "goal"), method: :patch, data: { turbo_frame: "_top" }) do |f| %>
      <div class="space-y-5 mb-8">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Your learning goal</label>
          <textarea name="goal" rows="3"
                    class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 focus:outline-none transition resize-none"
                    placeholder="e.g., I want to learn Python well enough to build web applications..."
                    required><%= profile.goal %></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">Timeline</label>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
            <% [
              ["1 month", "1_month"],
              ["3 months", "3_months"],
              ["6 months", "6_months"],
              ["1 year", "1_year"]
            ].each do |label, value| %>
              <label class="relative cursor-pointer block">
                <input type="radio" name="timeline" value="<%= value %>"
                       class="peer sr-only"
                       <%= "checked" if profile.timeline == value %>>
                <div class="flex items-center justify-center rounded-xl border-2 border-gray-200 py-3 px-4 transition text-center
                            peer-checked:border-indigo-600 peer-checked:bg-indigo-50
                            hover:border-gray-300 hover:bg-gray-50">
                  <span class="text-sm font-medium text-gray-700"><%= label %></span>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <div class="flex justify-between">
        <%= link_to "← Back", core.onboarding_path(step: "learning_style"),
            class: "rounded-lg border border-gray-300 px-8 py-3 text-sm font-semibold text-gray-700 hover:bg-gray-50 transition",
            data: { turbo_frame: "onboarding_step" } %>
        <%= f.submit "Finish setup ✓",
            class: "rounded-lg bg-green-600 px-8 py-3 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>
