<%# Evaluation Failed State (Turbo Stream replacement)
     locals: voice_response (VoiceResponse), error (String) %>

<div id="voice_evaluation_<%= voice_response.id %>"
     class="rounded-[14px] p-5"
     style="background: rgba(28,25,18,0.5); border: 1px solid rgba(248,113,113,0.15);">
  <div class="flex flex-col items-center gap-3 py-4">
    <%# Warning icon %>
    <div class="w-12 h-12 rounded-full flex items-center justify-center"
         style="background: rgba(248,113,113,0.1);">
      <svg class="w-6 h-6" style="color: #F87171;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
      </svg>
    </div>

    <p class="text-sm font-medium" style="color: #F87171; font-family: 'DM Sans', sans-serif;">
      <%= t("voice_evaluation.error_evaluating") %>
    </p>

    <% if error.present? %>
      <p class="text-xs text-center max-w-xs" style="color: #605848; font-family: 'DM Sans', sans-serif;">
        <%= error.to_s.truncate(120) %>
      </p>
    <% end %>

    <button onclick="window.location.reload()"
            class="mt-2 px-5 py-2.5 text-sm font-medium transition-all rounded-[11px]"
            style="color: #818CF8; background: rgba(99,102,241,0.1); font-family: 'DM Sans', sans-serif;"
            onmouseover="this.style.background='rgba(99,102,241,0.2)'" onmouseout="this.style.background='rgba(99,102,241,0.1)'">
      <%= t("voice_evaluation.retry") %>
    </button>
  </div>
</div>
