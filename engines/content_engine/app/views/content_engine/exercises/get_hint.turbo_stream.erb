<%= turbo_stream.replace "exercise_hint_#{@step.id}" do %>
  <div id="exercise_hint_<%= @step.id %>">
    <% if @error %>
      <div class="bg-red-900/20 border border-red-700/30 rounded-xl p-4 text-sm text-red-300">
        <%= @error %>
      </div>
    <% else %>
      <div class="bg-amber-900/20 border border-amber-700/30 rounded-xl p-4 lesson-content" data-controller="math-renderer" data-math-renderer-target="content">
        <div class="flex items-center gap-2 mb-2">
          <svg aria-hidden="true" class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>
          <span class="text-xs font-semibold text-amber-300"><%= t("content_actions.hint") %></span>
        </div>
        <%= @rendered_hint %>
      </div>
    <% end %>
  </div>
<% end %>
