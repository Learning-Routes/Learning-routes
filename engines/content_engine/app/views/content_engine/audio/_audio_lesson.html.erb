<%# Full Audio Lesson Layout
     locals: step (RouteStep), route (LearningRoute) %>

<% ai_content = ContentEngine::AiContent.where(route_step: step).by_type(:text).first %>
<% narration = ai_content&.metadata&.dig("narration") || {} %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-8">
  <!-- Step Header -->
  <div class="mb-6">
    <p class="text-xs font-medium text-indigo-400 uppercase tracking-wider mb-1" style="font-family: 'DM Mono', monospace;">
      <%= t("audio_lesson.label") %> Â· <%= t("audio_lesson.step_n", n: step.position + 1) %>
    </p>
    <h1 class="text-2xl font-bold text-white"><%= step.localized_title %></h1>
    <p class="text-sm text-gray-400 mt-1"><%= step.localized_description %></p>
  </div>

  <!-- Audio Player -->
  <%= render "content_engine/audio/player", step: step, ai_content: ai_content %>

  <!-- Transcript (collapsible) -->
  <% if ai_content&.audio_transcript.present? %>
    <details class="mt-6 rounded-xl bg-gray-900/50 border border-white/[0.06]">
      <summary class="px-5 py-3 text-sm font-medium text-gray-400 cursor-pointer hover:text-gray-300 transition-colors">
        <span class="ml-1"><%= t("audio_lesson.view_transcript") %></span>
      </summary>
      <div class="px-5 pb-4 text-sm text-gray-300 leading-relaxed">
        <%= simple_format(ai_content.audio_transcript) %>
      </div>
    </details>
  <% end %>

  <!-- Post-Audio Interaction Section -->
  <div id="post-audio-interaction-<%= step.id %>"
       class="mt-8 space-y-6"
       data-audio-player-target="postAudio">

    <div class="border-t border-white/[0.06] pt-6">
      <h2 class="text-lg font-semibold text-white mb-4"><%= t("audio_lesson.show_what_learned") %></h2>

      <!-- Discussion Question -->
      <% if narration["discussion_questions"].present? %>
        <div class="mb-6 rounded-xl bg-indigo-500/10 border border-indigo-500/20 p-4">
          <p class="text-xs font-medium text-indigo-400 uppercase tracking-wider mb-2" style="font-family: 'DM Mono', monospace;">
            <%= t("audio_lesson.reflection_question") %>
          </p>
          <p class="text-sm text-gray-200"><%= narration["discussion_questions"].first %></p>
        </div>
      <% end %>

      <!-- Voice Response Recorder -->
      <div id="voice-interaction-<%= step.id %>">
        <%= render "assessments/voice_responses/recorder", step: step %>
      </div>

      <!-- Quiz (if available) -->
      <% if step.step_quiz.present? %>
        <div class="mt-6 pt-6 border-t border-white/[0.06]">
          <p class="text-xs font-medium text-gray-400 uppercase tracking-wider mb-3" style="font-family: 'DM Mono', monospace;">
            <%= t("audio_lesson.comprehension_quiz") %>
          </p>
          <%= link_to t("audio_lesson.start_quiz"),
              assessments.assessment_path(step.step_quiz),
              class: "inline-flex items-center gap-2 px-5 py-2.5 text-sm font-semibold text-white bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-400 hover:to-purple-400 rounded-xl transition-all" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
