<% content_for(:title, "Dashboard - Learning Routes") %>

<div class="w-full max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Welcome back, <%= current_user.name %>!</h1>
    <p class="mt-1 text-gray-600">Continue your learning journey</p>
  </div>

  <% if !current_user.email_verified? %>
    <div class="rounded-lg bg-amber-50 border border-amber-200 p-4 mb-6">
      <div class="flex">
        <div class="shrink-0">
          <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 6a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 6zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-amber-800">
            Please verify your email address.
            <%= link_to "Resend verification email", core.resend_verification_path, data: { turbo_method: :post }, class: "font-semibold underline hover:text-amber-900" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <% if @routes.empty? %>
    <!-- Loading state for route generation -->
    <div class="bg-white shadow-lg rounded-2xl p-12 text-center" id="route-loading">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-6">
        <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900 mb-2">We're creating your personalized route...</h2>
      <p class="text-gray-600 mb-1">Our AI is analyzing your preferences and building the perfect learning path.</p>
      <p class="text-sm text-gray-400">This usually takes a few moments.</p>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @routes.each do |route| %>
        <%= link_to learning_routes_engine.route_path(route), class: "block bg-white shadow rounded-xl p-6 hover:shadow-md transition" do %>
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= route.topic %></h3>
              <p class="text-sm text-gray-500 mt-1">
                <%= route.subject_area %> &middot;
                <%= route.route_steps.completed_steps.count %>/<%= route.total_steps %> steps
              </p>
            </div>
            <div class="flex items-center gap-4">
              <div class="text-right">
                <p class="text-sm font-medium text-indigo-600"><%= route.progress_percentage %>%</p>
                <div class="w-24 bg-gray-200 rounded-full h-2 mt-1">
                  <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= route.progress_percentage %>%"></div>
                </div>
              </div>
              <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                           <%= case route.status
                               when 'active' then 'bg-green-100 text-green-800'
                               when 'completed' then 'bg-blue-100 text-blue-800'
                               when 'paused' then 'bg-yellow-100 text-yellow-800'
                               else 'bg-gray-100 text-gray-800'
                               end %>">
                <%= route.status.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- Profile summary card -->
  <% if @profile %>
    <div class="mt-8 bg-white shadow rounded-xl p-6">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Your Profile</h3>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 text-sm">
        <div>
          <p class="text-gray-500">Interests</p>
          <p class="font-medium text-gray-900"><%= @profile.interests&.map(&:capitalize)&.join(", ") || "—" %></p>
        </div>
        <div>
          <p class="text-gray-500">Level</p>
          <p class="font-medium text-gray-900"><%= @profile.current_level&.capitalize || "—" %></p>
        </div>
        <div>
          <p class="text-gray-500">Learning style</p>
          <p class="font-medium text-gray-900"><%= @profile.learning_style&.map(&:capitalize)&.join(", ") || "—" %></p>
        </div>
        <div>
          <p class="text-gray-500">Timeline</p>
          <p class="font-medium text-gray-900"><%= @profile.timeline&.humanize || "—" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
