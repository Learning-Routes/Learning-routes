<div id="generating-state" style="text-align:center; padding:60px 0;">
  <div style="margin:0 auto 24px; width:64px; height:64px; border-radius:50%; background:rgba(176,96,80,0.08); display:flex; align-items:center; justify-content:center;">
    <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
      <path d="M14 8v7" stroke="#B06050" stroke-width="2" stroke-linecap="round"/>
      <circle cx="14" cy="19.5" r="1.2" fill="#B06050"/>
      <circle cx="14" cy="14" r="11" stroke="#B06050" stroke-width="1.5" fill="none"/>
    </svg>
  </div>

  <h2 style="font-family:'DM Sans',sans-serif; font-weight:700; font-size:1.15rem; letter-spacing:-0.3px; color:var(--color-txt, #1C1812); margin:0 0 8px;">
    <%= t("wizard.failed.title") %>
  </h2>

  <p style="font-family:'DM Sans',sans-serif; font-weight:400; font-size:0.78rem; color:var(--color-muted, #9E9587); margin:0 auto 28px; max-width:300px; line-height:1.5;">
    <%= t("wizard.failed.desc") %>
  </p>

  <a href="<%= new_route_wizard_path %>"
     style="display:inline-flex; align-items:center; gap:8px; background:linear-gradient(135deg, var(--color-accent, #2C261E), var(--color-accent, #2C261E)); color:var(--color-accent-text, #FEFDFB); border-radius:12px; padding:14px 32px; text-decoration:none; font-family:'DM Sans',sans-serif; font-weight:600; font-size:0.85rem; box-shadow:0 2px 12px rgba(28,24,18,0.15); transition:transform 0.2s;"
     onmouseover="this.style.transform='translateY(-1px)'"
     onmouseout="this.style.transform='translateY(0)'">
    <%= t("wizard.failed.retry") %>
  </a>
</div>
