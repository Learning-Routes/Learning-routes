<section class="pt-48 pb-12 px-8 max-w-[1200px] mx-auto min-h-[85vh] flex items-center">
  <div class="flex items-center justify-between gap-[clamp(3rem,7vw,6rem)] flex-wrap w-full">

    <%# === LEFT COLUMN: Copy === %>
    <div class="flex-[1_1_440px] max-w-[580px]">

      <%# Heading %>
      <h1 class="animate-enter delay-100
                 font-sans font-bold text-[clamp(3rem,6.5vw,4.6rem)]
                 tracking-[-3px] leading-[1.02] text-txt">
        Aprende cualquier cosa, de&nbsp;la forma correcta.
      </h1>

      <%# Subtext %>
      <p class="animate-enter delay-200
                font-sans font-normal text-[1.1rem] text-sub
                leading-[1.9] max-w-[440px] mt-8">
        Dinos qué quieres dominar y recibe una ruta de aprendizaje única,
        con evaluaciones que se adaptan a tu progreso real.
      </p>

      <%# CTA Button %>
      <div class="animate-enter delay-300 mt-12">
        <a href="#como-funciona"
           class="inline-flex items-center justify-center
                  bg-accent text-accent-text font-sans text-[0.92rem] font-semibold
                  px-[2.2rem] py-[0.85rem] rounded-btn btn-shadow hover-lift
                  tracking-[-0.2px]">
          Ver cómo funciona
        </a>
      </div>

      <%# Social Proof %>
      <div class="animate-enter delay-400 mt-[3rem] flex items-center gap-[0.8rem]">
        <div class="flex items-center gap-[0.3rem]">
          <% 5.times do |i| %>
            <svg width="15" height="15" viewBox="0 0 24 24"
                 fill="<%= i < 4 ? '#B09848' : 'none' %>"
                 stroke="<%= i < 4 ? '#B09848' : '#CCC5B8' %>"
                 stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          <% end %>
        </div>
        <span class="font-sans text-[0.78rem] text-muted">
          4.8 de satisfacción en beta privada
        </span>
      </div>
    </div>

    <%# === RIGHT COLUMN: Product Preview (dark card) === %>
    <div class="animate-enter delay-200 flex-[0_0_auto]">
      <%= render "landing/product_preview" %>
    </div>

  </div>
</section>
