<section class="px-8 pb-20">
  <div class="max-w-[720px] mx-auto">

    <%# Gradient separator %>
    <div class="h-px mb-16"
         style="background: linear-gradient(90deg, transparent, rgba(28,24,18,0.06), transparent);"></div>

    <%# Section header %>
    <div class="animate-enter mb-10">
      <p class="label-mono text-muted mb-2">Integrations</p>
      <h2 class="font-sans font-bold text-[clamp(1.4rem,3vw,1.9rem)] tracking-[-0.8px] text-txt">
        Powered by the best <span class="text-sub">tools.</span>
      </h2>
    </div>

    <%# 2x2 grid %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-[0.6rem]">
      <%
        integrations = [
          { name: "OpenAI",      desc: "Content generation" },
          { name: "Claude",      desc: "Analysis and reasoning" },
          { name: "ElevenLabs",  desc: "Voice synthesis" },
          { name: "Nano Banana", desc: "Image generation" },
        ]
      %>

      <% integrations.each_with_index do |item, i| %>
        <div class="animate-enter flex items-center justify-between
                    px-[1.4rem] py-[1.05rem] rounded-[13px] border border-lr bg-card card-hover"
             style="animation-delay: <%= (i * 0.08 + 0.1).round(2) %>s;">

          <%# Provider name %>
          <span class="font-sans text-[0.88rem] font-semibold text-txt tracking-[-0.2px]">
            <%= item[:name] %>
          </span>

          <%# Description %>
          <span class="font-sans text-[0.68rem] text-muted">
            <%= item[:desc] %>
          </span>
        </div>
      <% end %>
    </div>

  </div>
</section>
