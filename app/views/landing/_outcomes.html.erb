<section class="py-20 px-8">
  <div class="max-w-[720px] mx-auto">

    <%# Section header %>
    <div class="animate-enter mb-10">
      <p class="label-mono text-muted mb-2">Outcomes</p>
      <h2 class="font-sans font-bold text-[clamp(1.4rem,3vw,1.9rem)] tracking-[-0.8px] text-txt">
        From where you are, <span class="text-sub">to where you want to be.</span>
      </h2>
    </div>

    <%# 2x2 grid %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-[0.8rem]">
      <%
        outcomes = [
          { from: "I don't know where to start",        to: "Clear route from day one",            color: "#8B80C4" },
          { from: "Generic content for everyone",        to: "Lessons adapted to your level",       color: "#B5718E" },
          { from: "I learn but forget quickly",          to: "Reinforcement that locks in learning", color: "#B09848" },
          { from: "I don't know if I'm progressing",     to: "Measurable progress at every stage",  color: "#5BA880" },
        ]
      %>

      <% outcomes.each_with_index do |item, i| %>
        <div class="animate-enter p-[1.4rem] rounded-card border border-lr bg-card card-hover"
             style="animation-delay: <%= (i * 0.08 + 0.1).round(2) %>s;">

          <%# "From" — strikethrough %>
          <p class="font-sans text-[0.72rem] text-muted line-through mb-[0.6rem]">
            <%= item[:from] %>
          </p>

          <%# "To" — bold with colored dot %>
          <div class="flex items-center gap-[0.5rem]">
            <span class="shrink-0 w-[6px] h-[6px] rounded-full" style="background: <%= item[:color] %>;"></span>
            <p class="font-sans text-[0.85rem] font-semibold text-txt">
              <%= item[:to] %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</section>
