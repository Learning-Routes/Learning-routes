<%#
  "Create new route" dashed card â€” links to onboarding/route creation flow.
%>
<%= link_to new_route_wizard_path,
    class: "create-route-card",
    style: "display:flex; flex-direction:column; align-items:center; justify-content:center; text-decoration:none; border:1.5px dashed var(--color-border-subtle); border-radius:18px; padding:40px 24px; text-align:center; transition:all 0.25s cubic-bezier(0.22,1,0.36,1); background:transparent; cursor:pointer; min-height:200px;" do %>

  <%# + Icon %>
  <div data-icon style="width:40px; height:40px; border-radius:12px; background:linear-gradient(135deg, rgba(139,128,196,0.08), rgba(91,168,128,0.08)); display:flex; align-items:center; justify-content:center; margin-bottom:0.9rem; transition:background 0.25s;">
    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" aria-hidden="true">
      <path d="M9 3v12M3 9h12" stroke="var(--color-sub)" stroke-width="1.5" stroke-linecap="round"/>
    </svg>
  </div>

  <p style="font-family:'DM Sans',sans-serif; font-weight:600; font-size:0.85rem; color:var(--color-txt); margin:0 0 0.35rem; letter-spacing:-0.2px;">
    <%= t("create_route.title") %>
  </p>
  <p style="font-family:'DM Sans',sans-serif; font-size:0.7rem; color:var(--color-muted); margin:0; max-width:240px; line-height:1.45;">
    <%= t("create_route.desc") %>
  </p>
<% end %>
