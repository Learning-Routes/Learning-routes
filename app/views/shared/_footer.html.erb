<%#
  Footer â€” logo, link columns, copyright.
  Shared partial used across layouts.
%>

<footer style="width: 100%; border-top: 1px solid rgba(28,24,18,0.08); margin-top: 1rem;">
  <div style="max-width: 1100px; margin: 0 auto; padding: 4rem clamp(1.5rem,5vw,4rem) 2.5rem;">

    <%# Main row: brand left, links right %>
    <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 3rem;">

      <%# Left: brand + tagline %>
      <div style="max-width: 320px;">
        <div style="display: flex; align-items: center; gap: 0.6rem; margin-bottom: 0.75rem;">
          <%= render "shared/logo", size: 20 %>
          <span style="font-family: 'DM Sans', sans-serif; font-weight: 700;
                       font-size: 1.05rem; letter-spacing: -0.5px; color: #1C1812;">
            Learning Routes
          </span>
        </div>
        <p style="font-family: 'DM Sans', sans-serif; font-size: 0.9rem;
                  line-height: 1.5; color: #A09889; margin: 0;">
          <%= t("footer.tagline") %>
        </p>
      </div>

      <%# Right: link columns %>
      <div style="display: flex; gap: clamp(3rem,6vw,5rem);">

        <%# Product %>
        <div>
          <p style="font-family: 'DM Mono', monospace; font-size: 0.7rem; font-weight: 500;
                    text-transform: uppercase; letter-spacing: 1.2px; color: #A09889;
                    margin: 0 0 1.1rem 0;">
            <%= t("footer.product") %>
          </p>
          <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.7rem;">
            <li>
              <a href="#features" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.features") %></a>
            </li>
            <li>
              <a href="#how-it-works" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.how_it_works") %></a>
            </li>
            <li>
              <a href="<%= core.sign_up_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.sign_up") %></a>
            </li>
          </ul>
        </div>

        <%# Legal %>
        <div>
          <p style="font-family: 'DM Mono', monospace; font-size: 0.7rem; font-weight: 500;
                    text-transform: uppercase; letter-spacing: 1.2px; color: #A09889;
                    margin: 0 0 1.1rem 0;">
            <%= t("footer.legal") %>
          </p>
          <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.7rem;">
            <li>
              <a href="<%= terms_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("footer.terms") %></a>
            </li>
            <li>
              <a href="<%= privacy_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("footer.privacy") %></a>
            </li>
            <li>
              <a href="mailto:hello@learning-routes.com" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("footer.contact") %></a>
            </li>
          </ul>
        </div>

        <%# Account %>
        <div>
          <p style="font-family: 'DM Mono', monospace; font-size: 0.7rem; font-weight: 500;
                    text-transform: uppercase; letter-spacing: 1.2px; color: #A09889;
                    margin: 0 0 1.1rem 0;">
            <%= t("footer.account") %>
          </p>
          <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.7rem;">
            <li>
              <a href="<%= core.sign_in_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.sign_in") %></a>
            </li>
            <li>
              <a href="<%= core.sign_up_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.sign_up") %></a>
            </li>
            <li>
              <a href="<%= community_path %>" style="font-family: 'DM Sans', sans-serif; font-size: 0.88rem;
                                 color: #6D665B; text-decoration: none; transition: color 0.2s ease;"
                 class="footer-link"><%= t("nav.community") %></a>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <%# Separator %>
    <div style="height: 1px; margin: 3rem 0 1.5rem;
                background: linear-gradient(90deg, rgba(28,24,18,0.06), rgba(28,24,18,0.08), rgba(28,24,18,0.06));">
    </div>

    <%# Bottom row: copyright + social hints %>
    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
      <p style="font-family: 'DM Mono', monospace; font-size: 0.75rem; color: #CCC5B8; margin: 0;">
        <%= t("footer.copyright") %>
      </p>

      <div style="display: flex; align-items: center; gap: 1.2rem;">
        <%# GitHub %>
        <a href="https://github.com/learning-routes" target="_blank" rel="noopener noreferrer" aria-label="GitHub" style="color: #CCC5B8; transition: color 0.2s ease;"
           class="social-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
          </svg>
        </a>
        <%# Twitter / X %>
        <a href="https://x.com/learningroutes" target="_blank" rel="noopener noreferrer" aria-label="Twitter" style="color: #CCC5B8; transition: color 0.2s ease;"
           class="social-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M4 4l11.733 16h4.267l-11.733 -16h-4.267z"/>
            <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/>
          </svg>
        </a>
      </div>
    </div>

  </div>
</footer>
